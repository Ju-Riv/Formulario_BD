//// -- LEVEL 1
//// -- Tables and References


enum tipo_hospital {
  distrital
  regional
  municipal
}
Table Hospital as H {
  id_hospital int pk
  nombre varchar 
  direccion varchar 
  latitud double 
  longitud double
  altitud double
  distrito varchar
  tipo tipo_hospital 
  MOPH_number int
}
enum fondos {
  "Si-Gobierno"
  "Si-Privado"
  "Si-Ambos"
  "No"
  "No sabe"
}
Table Update_hospital as UH {
  id_update int pk
  id_contacto int [ref: > Hospital_Contact.id_contacto]
  id_personel_vm int [ref: > Personel_VM.id_personel_vm]
  id_hospital int [ref: > H.id_hospital]
  id_cuestionario_status int [ref: > CSC.id_status]
  id_problema_status int [ref: > CP.id_problema]
  id_accion_status int [ref: > CA.id_accion]
  origen_fondos fondos 
  comentarios varchar //CAN BE NULL
  date timestamp
}

Table Personel_VM{
  id_personel_vm int pk
  nombre varchar
}

Table Hospital_Contact {
  id_contacto int pk
  telefono varchar
  nombre varchar //CAN BE NULL
  rango varchar //CAN BE NULL
}

Table Catalogo_Status_Cuestionario as CSC {
  id_status int pk
  nombre varchar 
}

Table Catalogo_Problemas as CP {
  id_problema int pk
  nombre varchar
}

Table Catalogo_Accion as CA {
  id_accion int pk
  nombre varchar
}

Table Protocolo {
  id_protocolo int pk
  id_update int [ref: - UH.id_update] //UNIQUE
  covid_screening boolean
  covid_awareness boolean
  avg_test_result_time int
  test_capacity boolean
  covid_tracking boolean
  MOPH_report boolean
  
}

Table Covid_Cases {
  id_casefile int pk
  id_update int [ref: - UH.id_update] //UNIQUE
  patients_with_symptoms int
  positive_patients int
  intensive_care int
  covid_deaths int
  non_covid_deaths int
  covid_recovered int
  PHC_referred int
}

Table Personel {
  id_personel int pk 
  id_update int [ref: - UH.id_update] //UNIQUE
  no_doctors int
  no_paramedics int
}

Table Inventario {
  id_update int pk [ref: > UH.id_update]
  id_producto int pk [ref: > CR.id_producto]
  numero_dias int
}

enum tipo_recurso {
  covid
  general
}

Table Catalogo_Recursos as CR {
  id_producto int pk
  nombre varchar
  tipo tipo_recurso
}
